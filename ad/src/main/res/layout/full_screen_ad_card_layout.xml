<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adv_sdk_bg"
    android:orientation="vertical"
    android:paddingBottom="6dp">

    <FrameLayout
        android:id="@+id/adv_sdk_media_container"
        android:layout_width="match_parent"
        android:layout_height="190dp">


    </FrameLayout>

    <ImageView
        android:id="@+id/adv_sdk_corner_img"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:src="@drawable/ad_label" />


    <FrameLayout
        android:id="@+id/adv_sdk_corner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adv_sdk_install_dl"
        android:layout_below="@+id/adv_sdk_media_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adv_sdk_install_icon"
                android:layout_width="84dp"
                android:layout_height="84dp" />

            <TextView
                android:id="@+id/adv_sdk_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/adv_sdk_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="4"
                android:textColor="#747474"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/adv_sdk_install_dl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/ad_fullscreen_card_dl_bg"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#FEFEFE"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/adv_sdk_click_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/adv_sdk_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="11dp"
        android:src="@drawable/adv_close" />

</RelativeLayout>