<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/adv_sdk_bg"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <com.mopub.nativeads.MediaLayout
        android:id="@+id/adv_sdk_media_layout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#000000" />

    <ImageView
        android:id="@+id/adv_sdk_corner_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:src="@drawable/ad_label" />

    <TextView
        android:id="@+id/adv_sdk_corner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#60303030"
        android:padding="4dp"
        android:textColor="#eee"
        android:textSize="13sp" />

    <FrameLayout
        android:id="@+id/adv_sdk_corner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/adv_sdk_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adv_sdk_media_layout"
        android:layout_marginStart="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <ImageView
            android:id="@+id/adv_sdk_install_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/adv_sdk_install_icon"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@id/adv_sdk_install_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adv_sdk_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#FF202020"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/adv_sdk_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adv_sdk_install_icon"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:includeFontPadding="false"
            android:maxLines="3"
            android:textColor="#707070"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/adv_sdk_install_dl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/adv_sdk_detail_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/ad_fullscreen_card_dl_bg"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#fff"
        android:textSize="17sp" />

</RelativeLayout>