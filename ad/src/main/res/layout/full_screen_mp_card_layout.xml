<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adv_sdk_bg"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <RelativeLayout
        android:id="@+id/mopub_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/adv_sdk_install_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/adv_sdk_corner_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ad_label" />

        <FrameLayout
            android:id="@+id/adv_sdk_corner_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/adv_sdk_install_dl"
            android:layout_below="@+id/adv_sdk_install_image">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/adv_sdk_install_icon"
                    android:layout_width="82dp"
                    android:layout_height="82dp" />

                <TextView
                    android:id="@+id/adv_sdk_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/adv_sdk_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="4"
                    android:textColor="#FF747474"
                    android:textSize="12sp" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/adv_sdk_install_dl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/ad_fullscreen_card_dl_bg"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="#FeFeFe"
            android:textSize="16sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/adv_sdk_click_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/adv_sdk_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:src="@drawable/adv_close" />

</RelativeLayout>