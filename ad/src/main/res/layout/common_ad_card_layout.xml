<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/adv_sdk_bg"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <FrameLayout
        android:id="@+id/adv_sdk_media_container"
        android:layout_width="match_parent"
        android:layout_height="190dp">


    </FrameLayout>


    <ImageView
        android:id="@+id/adv_sdk_corner_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:src="@drawable/ad_label" />

    <TextView
        android:id="@+id/adv_sdk_corner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#50303030"
        android:padding="3dp"
        android:text="sponsor"
        android:textColor="#ffffffff"
        android:textSize="13sp" />

    <FrameLayout
        android:id="@+id/adv_sdk_corner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/adv_sdk_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adv_sdk_media_container"
        android:layout_marginStart="15dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp">


        <ImageView
