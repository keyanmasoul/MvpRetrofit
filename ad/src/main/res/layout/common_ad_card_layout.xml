            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:includeFontPadding="false"
            android:maxLines="3"
            android:textColor="#777777"
            android:textSize="14sp" />

